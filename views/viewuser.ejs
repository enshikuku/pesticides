<!DOCTYPE html>
<html lang="en">
<head>
  <title>User Management | Admin</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <div class="main-bg">
    <header class="main-header">
      <div class="header-inner header-inner-centered">
        <h1 class="company-logo">PESTICIDES SUPPLY SYSTEM</h1>
        <nav class="main-navigation nav-centered">
          <ul class="nav-list">
            <li class="nav-item"><a href="/adminview" class="nav-link">View Product</a></li>
            <li class="nav-item"><a href="/addproduct" class="nav-link">Add Product</a></li>
            <li class="nav-item active"><a href="/admin/viewuser" class="nav-link">User Management</a></li>
            <li class="nav-item"><a href="/" class="nav-link">Log Out</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main class="products-section">
      <a href="/admin/adduser" class="btn btn-update" style="margin-bottom:16px;display:inline-block;">Add New User</a>
      <h2 class="products-title">All Users</h2>
      <div class="table-responsive">
        <table class="admin-products-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.fname %></td>
                <td><%= user.lname %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.toLocaleString ? user.created_at.toLocaleString() : user.created_at %></td>
                <td>
                  <a href="/admin/user/edit/<%= user.id %>" class="btn btn-update">Edit</a>
                  <form action="/admin/user/delete/<%= user.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Delete this user?')">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <a href="/admin/addadmin" class="btn btn-update" style="margin:32px 0 16px 0;display:inline-block;">Add New Admin</a>
      <h2 class="products-title" style="margin-top:32px;">All Admins</h2>
      <div class="table-responsive">
        <table class="admin-products-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% admins.forEach(admin => { %>
              <tr>
                <td><%= admin.id %></td>
                <td><%= admin.name %></td>
                <td><%= admin.created_at.toLocaleString ? admin.created_at.toLocaleString() : admin.created_at %></td>
                <td>
                  <a href="/admin/edit/<%= admin.id %>" class="btn btn-update">Edit</a>
                  <form action="/admin/admin/delete/<%= admin.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Delete this admin?')">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</body>
</html>